rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // User profiles
    match /users/{userId} {
      allow read: if isAuthenticated();
      
      // Validate user data
      function isValidUser() {
        let data = request.resource.data;
        return data.email is string &&
               data.displayName is string &&
               data.country is string &&
               data.createdAt is timestamp;
      }
      
      // Allow creation of new users
      allow create: if isValidUser();
      
      // Allow updates/deletes only by owner
      allow update, delete: if isOwner(userId);
    }
    
    // Activities
    match /activities/{activityId} {
      allow read: if isAuthenticated();
      
      // Validate activity data
      function isValidActivity() {
        let data = request.resource.data;
        return data.distance is number &&
               data.duration is number &&
               data.location is string &&
               (!('imageUrl' in data) || data.imageUrl is string) &&
               (!('notes' in data) || data.notes is string);
      }
      
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == request.auth.uid &&
                      isValidActivity();
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Events
    match /events/{eventId} {
      allow read: if true;
      allow write: if false; // Only admin can write
    }
    
    // Strava tokens
    match /stravaTokens/{userId} {
      allow read, write: if isOwner(userId);
    }
  }
}
